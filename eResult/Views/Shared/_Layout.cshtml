<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title - eResult Application</title>
    <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
    <meta name="viewport" content="width=device-width" />
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <header>
        <div class="content-wrapper">
            <div class="float-left" style="margin-left: -45px; width: 55%;">
                <p class="site-title">
                    <img id="imgLogo" src="@Url.Content("~/Content/Images/header_image.png")" alt="Logo" style="height: 56px; width: 100%; margin-bottom: -26px;"/>
                    @*@Html.ActionLink("your logo here", "Index", "Home")*@
                </p>
            </div>
            <div class="float-right">
                <section id="login">
                    @Html.Partial("_LoginPartial")
                </section>
                <nav>
                    <ul id="menu">
                        <li>@Html.ActionLink("Home", "Index", "Home")</li>
                        <li>@Html.ActionLink("Student", "Summary", "Student")</li>
                        <li>@Html.ActionLink("Teacher", "Summary", "Teacher")</li>
                        <li>@Html.ActionLink("Course", "Summary", "Course")</li>
                        <li>@Html.ActionLink("Exam", "Summary", "Exam")</li>
                        <li>@Html.ActionLink("Result", "Summary", "ExamResult")</li>
                        @*<li>@Html.ActionLink("About", "About", "Home")</li>
                            <li>@Html.ActionLink("Contact", "Contact", "Home")</li>*@
                    </ul>
                </nav>
            </div>
        </div>
    </header>
    <div id="body">
        @RenderSection("featured", required: false)
        <section class="content-wrapper main-content clear-fix">
            @RenderBody()
        </section>
    </div>
    <footer>
        <div class="content-wrapper">
            <div class="float-left">
                <p>Copyright © @DateTime.Now.Year by Darkhouse Inc. All Rights Reserved.</p>
            </div>
        </div>
    </footer>

    @Scripts.Render("~/bundles/jquery")
    @RenderSection("scripts", required: false)
</body>
</html>
