@*@model IEnumerable<IIT.EResult.Models.ExamResultModel>*@

@model IList<IIT.EResult.Models.ExamResultModel>
<fieldset>
    <legend>Exam Result</legend>
    <div>
        @if (Model != null)
        {
            <table>
                <tr style="background-color: gray;">
                    <th>ID</th>
                    <th>Name</th>
                    <th>CourseId</th>
                    <th>BatchNo</th>
                    <th>ExamType</th>
                    <th>ExamNo</th>
                    <th>Mark</th>
                </tr>
                @for (var i = 0; i < Model.Count(); i++)
                {
                    <tr>
                        @if (ViewBag.EditMode)
                        {
                            @Html.HiddenFor(x => x[i].Id)
                        }
                        @Html.HiddenFor(x => x[i].StudentId)
                        @Html.HiddenFor(x => x[i].StudentName)
                        @Html.HiddenFor(x => x[i].CourseId)
                        @Html.HiddenFor(x => x[i].BatchNo)
                        @Html.HiddenFor(x => x[i].ExamType)
                        @Html.HiddenFor(x => x[i].ExamNo)

                        <td>@Html.DisplayFor(x => x[i].StudentId)</td>
                        <td>@Html.DisplayFor(x => x[i].StudentName)</td>
                        <td>@Html.DisplayFor(x => x[i].CourseId)</td>
                        <td>@Html.DisplayFor(x => x[i].BatchNo)</td>
                        <td>@Html.DisplayFor(x => x[i].ExamType)</td>
                        <td>@Html.DisplayFor(x => x[i].ExamNo)</td>
                        <td>@Html.EditorFor(x => x[i].Mark)</td>
                    </tr>
                }
            </table>
        }
    </div>
    <div>
        <input type="submit" id="btnSubmitResult" value="Submit Marks" />
    </div>
</fieldset>

