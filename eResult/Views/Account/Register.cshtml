@model IIT.EResult.Models.RegisterModel
@{
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
    ViewBag.Title = "Register";
}
<script src="@Url.Content("~/Scripts/jquery-1.7.1.min.js")" type="text/javascript"></script>
<style type="text/css">
    .main-content
    {
        padding-top: 30px;
    }
</style>
<script type="text/javascript">
    $(function () {
        $("#btnCancel").on("click", function () {
            window.location = "../Account/Login";
            @*$.ajax({
                url: "@(Url.Action("LogOff", "Account"))",
                type: "POST",
                data: {},
                success: function(result) {
                    //$("#divNewResultEntry").html(result);
                },
                error: function(jqXhr, textStatus, errorThrown) {
                    alert("Error: " + textStatus + " " + errorThrown);
                }
            });*@
        });
    });
</script>
<hgroup class="title">
    <h1>@ViewBag.Title.</h1>
    <h2>Create a new account.</h2>
</hgroup>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Registration Form</legend>
        <ol>
            <li>
                @Html.LabelFor(m => m.UserName)
                @Html.TextBoxFor(m => m.UserName, new { @placeholder = "dummy@dummy.com" })
                @Html.ValidationMessageFor(m => m.UserName)
            </li>
            <li>
                @Html.LabelFor(m => m.Password)
                @Html.PasswordFor(m => m.Password, new { @placeholder = "password" })
                @Html.ValidationMessageFor(m => m.Password)
            </li>
            <li>
                @Html.LabelFor(m => m.ConfirmPassword)
                @Html.PasswordFor(m => m.ConfirmPassword, new { @placeholder = "password" })
                @Html.ValidationMessageFor(m => m.ConfirmPassword)
            </li>
        </ol>
        <input type="submit" id="btnSubmit" value="Register" />
        <input type="button" id="btnCancel" value="Cancel" />
    </fieldset>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
